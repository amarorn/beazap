APP_NAME=BeaZap
DEBUG=false

# SQLite (padrão) ou PostgreSQL
DATABASE_URL=sqlite:///./beazap.db
# DATABASE_URL=postgresql://user:password@localhost/beazap

# Chave secreta da aplicação
SECRET_KEY=troque-esta-chave-em-producao

# Evolution API (configuração global, pode ser sobrescrita por instância)
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=sua-api-key-aqui

# Webhook secret opcional
WEBHOOK_SECRET=

# LLM para análise de conversas — escolha o provedor: "anthropic" ou "openai"
LLM_PROVIDER=anthropic

# Anthropic Claude (claude-haiku-4-5-20251001)
ANTHROPIC_API_KEY=sua-chave-aqui

# OpenAI (gpt-4o-mini)
OPENAI_API_KEY=sua-chave-aqui
